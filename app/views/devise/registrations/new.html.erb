<h1>Sign Up!</h1>

<%= bootstrap_form_with model: @user, url: users_path, method: :post, local: true do |f| %>

	<%= f.text_field :username, label: "Enter your user name*" %>
	<%= f.text_field :email, label: "Enter your email*" %>
	<%= f.password_field :password, label: "Enter your password*"  %>
	<%= f.file_field :image, label: "Choose your profile picture"  %>
	<%= f.submit "Create Account"%>

<% end %>
